[#ftl]
[@b.head/]
[@b.toolbar title="修改文档类型"]bar.addBack();[/@]
[@b.tabs]
  [@b.form action=b.rest.save(docSetting) theme="list"]
    [@b.select name="docSetting.docType.id" label="文档类型" value=docSetting.docType! items=docTypes required="true" /]
    [@b.textarea name="docSetting.url" label="地址" value="${docSetting.url!}"  required="true" maxlength="300" cols="80" row="2" style="min-width:400px"/]
    [@b.select name="docSetting.orientation" items={} label="纸张方向" required="true" ]
      [#list orientations as o]
        <option value="${o}" [#if docSetting.orientation==o]selected="selected"[/#if]>${o}</option>
      [/#list]
    [/@]
    [@b.select name="docSetting.pageSize" items={} label="纸张大小" required="true" ]
      [#if docSetting??]
        [#list pageSizes as pageSize]
          <option value="${pageSize}" [#if docSetting.pageSize==pageSize]selected="selected"[/#if]>${pageSize}</option>
        [/#list]
      [#else]
        [#list pageSizes as pageSize]
          <option value="${pageSize}" [#if docSetting.pageSize==PageSize.A4]selected="selected"[/#if]>${pageSize}</option>
        [/#list]
      [/#if]
    [/@]
    [@b.formfoot]
      [@b.reset/]&nbsp;&nbsp;[@b.submit value="action.submit" /]
    [/@]
  [/@]
[/@]
[@b.foot/]
